<h1>Products - <%= link_to 'New', new_products_path %></h1>

<table>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= "$#{product.price}" %></td>
        <td>
          <%=  link_to 'Edit', edit_product_path(product.id) %>
          <%=  link_to 'Delete', delete_product_path(product.id), method: :delete %>
        </td>
      </tr>
    <%  end %>
  </tbody>
</table>
